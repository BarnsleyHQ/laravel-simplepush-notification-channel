{
    "name": "barnsleyhq/laravel-simplepush-notifications-channel",
    "description": "A SimplePush Laravel Notifications Channel",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Barnsley",
            "email": "alex@barnsley.io"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "BarnsleyHQ\\SimplePush\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BarnsleyHQ\\SimplePush\\Tests\\": "tests/src"
        }
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.5",
        "pestphp/pest": "^1.22",
        "laravel/framework": "^10.4",
        "phpunit/phpunit": "^9.6",
        "nunomaduro/collision": "^6.1",
        "pestphp/pest-plugin-laravel": "^1.4",
        "phpstan/phpstan": "^1.10",
        "orchestra/testbench": "^8.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php vendor/bin/testbench package:discover --ansi"
        ],
        "analyse": [
            "vendor/bin/phpstan analyse -l 6 src tests"
        ],
        "test": [
            "pest tests/"
        ],
        "test:coverage": [
            "pest --coverage --min=100 --coverage-html=.coverage --coverage-clover=coverage.xml tests/"
        ]
    }
}
